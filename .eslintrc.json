{
  "extends": [
    "plugin:@angular-eslint/recommended",
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "project": "tsconfig.json"
  },
  "ignorePatterns": ["*.js"],
  "overrides": [
    {
      "files": ["*.ts", "*.html"],
      "rules": {
        "prettier/prettier": ["error"]
      }
    }
  ]
}
